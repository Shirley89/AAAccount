extends layout

block content
    .wrapper(ng-app="AA-Account",ng-controller="activityListCtrl")
        .page-header
            h1= 'Account List'
        div
            .input-group
                input(type="text",class="form-control",placeholder="new account",ng-model="input")
                span(class="input-group-btn")
                    button(class="btn btn-default",type="button",ng-click="add()")= "+"

        .list-group
            a(class="list-group-item",ng-repeat="activity in activities track by $index",ng-class="{active:isActived === $index}",ng-bind="activity.name",href='/count/{{activity.index}}')