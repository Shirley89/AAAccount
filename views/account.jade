extends layout

block content
    article.wrapper

        header.page-header
            h1= 'AA Calculate'


        section
            h3 Activities
            .dropdown
                button.btn.btn-default.dropdown-toggle(type="button",id="dropdownMenu1",data-toggle="dropdown" aria-haspopup="true",aria-expanded="true") All Activities
                    span.caret
                ul.dropdown-menu(aria-labelledby="dropdownMenu3")
                    li(v-for="activity in activities")
                        a(href="javascript:;",v-text="activity")
                    li.divider(role="separator")
                    li.btn-addactivity
                        a(href="javascript:;") new activity


        section.members
            header
                h3 Members
                a(href="javascript:;") add
            ul.member-list.list-inline
                li(v-for="name in members")
                    span.glyphicon.glyphicon-user(aria-hidden="true")
                    span(v-text="name")


        section.items
            header
                h3 Items
                a(href="javascript:;",@click="addItems()") new item
            article.container-fluid
                .row(v-for="item in items")
                    .col-xs-1.col-md-1.col-lg-1
                        .checkbox
                            label
                                input(type="checkbox",value="option1",aria-label="...",:data-index="item.index")
                    .col-xs-3.col-md-3.col-lg-3
                        select.form-control(:data-index="item.index",@change="select($event)")
                            option(v-for="(name, index) in membersAll",:value="name",v-text="name")

                    .col-xs-3.col-md-3.col-lg-3
                        select.form-control(:data-index="item.index",@change="select($event)")
                            option(v-for="(act, index) in activitiesAll",:value="act",v-text="act")

                    .col-xs-3.col-md-3.col-lg-3
                        .input-group
                            span.input-group-addon ï¿¥
                            input.form-control(type="text",aria-label="RMB",:data-index="item.index",@change="input($event)")